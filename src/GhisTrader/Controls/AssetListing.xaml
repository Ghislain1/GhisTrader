<UserControl x:Class="GhisTrader.Controls.AssetListing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GhisTrader.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <ListView BorderThickness="0"
            ItemsSource="{Binding Assets}">
    <ListView.View>
      <GridView>
        <GridView.ColumnHeaderContainerStyle>
          <Style TargetType="GridViewColumnHeader">
            <Setter Property="Template">
              <Setter.Value>
                <ControlTemplate TargetType="GridViewColumnHeader">
                  <Border BorderBrush="Gray"
                          BorderThickness="0 0 0 1"
                          Padding="0 5 50 5">
                    <TextBlock Text="{TemplateBinding Content}" />
                  </Border>
                </ControlTemplate>
              </Setter.Value>
            </Setter>
          </Style>
        </GridView.ColumnHeaderContainerStyle>

        <GridViewColumn Header="Symbol"
                        DisplayMemberBinding="{Binding Symbol}" />
        <GridViewColumn Header="Shares"
                        DisplayMemberBinding="{Binding Shares}" />
      </GridView>
    </ListView.View>
    <ListView.ItemContainerStyle>
      <Style TargetType="ListViewItem">
        <Setter Property="Focusable"
                Value="False" />
        <Setter Property="IsHitTestVisible"
                Value="False" />
        <Setter Property="Margin"
                Value="0 10" />
        <Setter Property="Foreground"
                Value="Black" />
      </Style>
    </ListView.ItemContainerStyle>
  </ListView>
</UserControl>
